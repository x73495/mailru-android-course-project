<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_course_entry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/layout_drug_info"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/layout_drug_info">

            <TextView
                    android:id="@+id/course_history_entry_date_start"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.RTP.Caption2"
                    tools:text="11.11.1111"
                    android:layout_width="wrap_content"
                    android:textColor="@color/indigo_A700_light" />

            <TextView
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:id="@+id/textView4"
                    android:textColor="@color/indigo_A700_light" />

            <TextView
                    android:id="@+id/course_history_entry_date_end"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.RTP.Caption2"
                    tools:text="11.11.1111"
                    android:layout_width="wrap_content"
                    android:textColor="@color/indigo_A700_light" />

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/layout_drug_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_course_history_entry_name_of_drug"
                    style="@style/TextAppearance.RTP.Title2"
                    tools:text="name of drug"
                    android:textColor="?attr/course_entry_name_of_drug_color" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_course_history_entry_amount_of_drug"
                        style="@style/TextAppearance.RTP.Caption2"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color"
                        tools:text="amount of drug" />

                <TextView
                        android:id="@+id/text_course_history_entry_measure_of_drug"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color"
                        tools:text="шт" />

                <TextView
                        android:text="/"
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/course_history_entry_frequency_amount"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color"
                        tools:text="1337" />

                <TextView
                        android:text="в"
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/course_history_entry_frequency_measure"
                        android:textColor="?attr/course_entry_amount_of_drug_text_color"
                        tools:text="день" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>