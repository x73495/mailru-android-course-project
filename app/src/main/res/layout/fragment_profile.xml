<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_forward"
            app:strokeColor="@color/gray_400"
            app:iconGravity="end"
            app:iconTint="@color/gray_900"
            android:padding="32dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:text="@string/course_history"
            android:textAppearance="@style/TextAppearance.RTP.Title2"
            android:textColor="@color/gray_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_to_course_history"
            android:textAlignment="viewStart" />

    <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_forward"
            app:strokeColor="@color/gray_400"
            app:iconGravity="end"
            app:iconTint="@color/gray_900"
            android:padding="32dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:text="@string/drugs"
            android:textAppearance="@style/TextAppearance.RTP.Title2"
            android:textColor="@color/gray_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_to_drug_list"
            android:textAlignment="viewStart" />

</LinearLayout>